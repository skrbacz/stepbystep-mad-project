<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popups.SetNotificationsPopUpFragment">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:backgroundTint="@color/almost_white">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/outline_dark_blue"
             />

        <TextView
            android:id="@+id/notificationsMessageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/main_font"
            android:text="In this version of the app you need to turn on the notifications manually. Allowing them from here is coming soon!"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:textStyle="italic|bold" />

        <Button
            android:id="@+id/givePermissionBTN"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:text="Thanks for the message!"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:fontFamily="@font/main_font"
            android:textStyle="italic|bold"
            android:backgroundTint="@color/orange"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stepbystep team"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:fontFamily="@font/main_font"
            android:textStyle="bold"
            android:layout_gravity="left|center"/>
    </FrameLayout>

</FrameLayout>