<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="55dp"
    tools:context=".fragments.ProfileFragment"
    android:background="@drawable/profile_bckground"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/outline_dark_blue" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:id="@+id/header_title">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_below="@id/header_title">


        <TextView
            android:id="@+id/nickNamePRF"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/main_font"
            android:text="$nick"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:textSize="20sp"
            android:textStyle="italic|bold" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_info"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/statistics_bckground_profile"
        android:layout_marginBottom="35dp">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/outline_dark_blue" />

        <ProgressBar
            android:id="@+id/progressBarProfile"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="40dp"
            android:progressDrawable="@drawable/monthly_progress_bar_horizontal"
            android:progress="0"

            />

        <TextView
            android:id="@+id/informAboutMonthlyGoalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="monthly goal:"
            android:gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/main_font"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            />

        <TextView
            android:id="@+id/monthly_stats_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="monthly statsistics"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|center"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/informAboutApproximateDistanceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="approximate distance:"
            android:layout_marginStart="10dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/main_font"
            android:textColor="@color/main_bottom_color_darker_blue"
            android:textSize="16dp"
            android:textStyle="italic|bold"/><![CDATA[

        />

    ]]>
    </FrameLayout>


</RelativeLayout>